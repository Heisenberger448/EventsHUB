// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PLATFORM_ADMIN
  ORG_ADMIN
  ORG_USER
}

enum AmbassadorStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  COMPLETED
  ARCHIVED
}

model Organization {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  kvkNumber      String?
  companyAddress String?
  createdAt      DateTime @default(now())
  
  users     User[]
  events    Event[]
  rewards   Reward[]
  weeztixIntegration WeeztixIntegration?
}

model User {
  id                String              @id @default(cuid())
  name              String?
  email             String              @unique
  passwordHash      String
  role              UserRole
  organizationId    String?
  firstName         String?
  lastName          String?
  phoneNumber       String?
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime            @default(now())
  
  organization      Organization?       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  ambassadorEvents  AmbassadorEvent[]
  campaignCompletions AmbassadorCampaign[]
  
  @@index([organizationId])
  @@index([resetToken])
}

model Event {
  id             String            @id @default(cuid())
  organizationId String
  name           String
  slug           String            @unique
  description    String?
  startDate      DateTime?
  endDate        DateTime?
  ticketProvider String?
  ticketShopId   String?
  ticketShopName String?
  createdAt      DateTime          @default(now())
  
  organization   Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  ambassadorEvents AmbassadorEvent[]
  campaigns      Campaign[]
  
  @@index([organizationId])
  @@index([slug])
}

model Campaign {
  id           String         @id @default(cuid())
  eventId      String
  title        String
  description  String
  startDate    DateTime
  endDate      DateTime
  rewardPoints Int
  status       CampaignStatus @default(DRAFT)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  
  event        Event                 @relation(fields: [eventId], references: [id], onDelete: Cascade)
  completions  AmbassadorCampaign[]
  
  @@index([eventId])
  @@index([status])
}

model AmbassadorCampaign {
  id           String   @id @default(cuid())
  userId       String
  campaignId   String
  completedAt  DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign     Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  @@unique([userId, campaignId])
  @@index([userId])
  @@index([campaignId])
}

// Junction table: User can be ambassador for multiple Events
model AmbassadorEvent {
  id        String            @id @default(cuid())
  userId    String
  eventId   String
  status    AmbassadorStatus  @default(PENDING)
  instagram String?
  tiktok    String?
  phone     String?
  birthDate String?
  gender    String?
  address   String?
  trackerGuid  String?
  trackerCode  String?
  trackerUrl   String?
  ticketsSold  Int              @default(0)
  ticketRevenue Int             @default(0)
  lastSyncedAt DateTime?
  createdAt    DateTime          @default(now())
  
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  event     Event             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
  @@index([status])
}

model Reward {
  id              String       @id @default(cuid())
  organizationId  String
  name            String
  description     String
  pointsRequired  Int
  createdAt       DateTime     @default(now())
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
}

model WeeztixIntegration {
  id                    String       @id @default(cuid())
  organizationId        String       @unique
  clientId              String
  clientSecret          String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  companyGuid           String?
  companyName           String?
  connectedAt           DateTime?
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  organization          Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}
